#! /bin/bash

set -e

rm -rf \
  ./doc/src \
  ./doc/scenarios \
  ./doc/sheets

docco --layout linear \
      --output doc/src \
      server.php \
      $(find src/ -name "*.php") \
      $(find src/ -name "*.md")
docco --layout linear \
      --output doc/scenarios \
      $(find scenarios/ -name "*.php" | grep -v "vendor") \
      $(find scenarios/ -name "*.md" | grep -v "vendor")
docco --layout linear \
      --output doc/sheets \
      $(find sheets/ -name "*.md")
